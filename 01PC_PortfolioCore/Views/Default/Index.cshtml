@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_DefaultHeadComponent")

<body class="index-page">

    @await Component.InvokeAsync("_DefaultSideBarComponent")

    <main class="main">

        @await Component.InvokeAsync("_DefaultFeatureComponent")
        @await Component.InvokeAsync("_DefaultAboutComponent")
        @await Component.InvokeAsync("_DefaultStatisticsComponent")
        @await Component.InvokeAsync("_DefaultSkillComponent")

        <!-- Resume Section -->
        <section id="resume" class="resume section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Eğitimlerim ve Deneyimlerim</h2>
                <p>Aşağıda bugüne kadar aldığım eğitimleri, stajlar sonucu edindiğim deneyimleri ve detaylarını görüntüleyebilirsiniz.</p>
            </div><!-- End Section Title -->

            <div class="container">

                <div class="row">

                    @await Component.InvokeAsync("_DefaultEducationComponent")

                    @await Component.InvokeAsync("_DefaultExperienceComponent")

                </div>

            </div>

        </section><!-- /Resume Section -->

        @await Component.InvokeAsync("_DefaultPortfolioComponent")
        @await Component.InvokeAsync("_DefaultServiceComponent")
        @await Component.InvokeAsync("_DefaultTestimonialComponent")

        <!-- Contact Section -->
        <section id="contact" class="contact section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>İletişim</h2>
                <p>Aşağıda iletişim kanallarımı görebilir ve sorularınız için mesaj gönderebilirsiniz.</p>
            </div><!-- End Section Title -->

            <div class="container" data-aos="fade" data-aos-delay="100">

                <div class="row gy-4">

                    @await Component.InvokeAsync("_DefaultContactComponent")

                    <div class="col-lg-8">
                        @await Html.PartialAsync("/Views/Default/SendMessage.cshtml")
                    </div><!-- End Contact Form -->

                    <div class="col-md-12">
                        <div class="map_container ">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3014.6459969510493!2d29.315891399999998!3d40.923507199999996!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cada22a9601b2f%3A0xf83f0868c348b10e!2sTeknopark%20%C4%B0stanbul%20A.%C5%9E.!5e0!3m2!1str!2str!4v1745601655654!5m2!1str!2str" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>

                </div>

            </div>

        </section><!-- /Contact Section -->

    </main>

    @await Component.InvokeAsync("_DefaultFooterComponent")
    @await Component.InvokeAsync("_DefaultScriptComponent")

</body>

</html>