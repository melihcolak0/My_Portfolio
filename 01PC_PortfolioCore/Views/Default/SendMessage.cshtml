@model Message

<form id="messageForm" method="post" asp-action="SendMessage" asp-controller="Default" class="form-group">
    <div class="row gy-4">
        <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Adınız ve Soyadınız" required asp-for="NameSurname">
        </div>

        <div class="col-md-6 ">
            <input type="email" class="form-control" placeholder="E-Mail Adresiniz" required asp-for="Email">
        </div>

        <div class="col-md-12">
            <input type="text" class="form-control" placeholder="Konu" required asp-for="Subject">
        </div>

        <div class="col-md-12">
            <textarea class="form-control" rows="6" placeholder="Mesajınız" required asp-for="MessageDetail"></textarea>
        </div>

        <div class="col-md-12 text-center">     
            <button type="button" class="btn btn-primary" id="submitButton">Gönder</button>
        </div>

    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {
        $('#submitButton').click(function () {
             Swal.fire({
                 title: "Mesaj Gönderildi!",
                 icon: "success",
             }).then((result) => {
                if (result.isConfirmed) {
                    $('#messageForm').submit();
                }
            });
        });
    });
</script>

