@model JobTitle
@{
    ViewData["Title"] = "UpdateJobTitle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h4>Pozisyon Güncelleme</h4>
<br />
<form class="form-group" method="post">
    <label>Id</label>
    <input type="text" class="form-control" asp-for="JobTitleId" style="border:1px solid black" readonly />
    <br />
    <label>Pozisyon</label>
    <input type="text" class="form-control" asp-for="Title" style="border:1px solid black" />
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>
