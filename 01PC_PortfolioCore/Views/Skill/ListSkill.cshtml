@model List<Skill>
@{
    ViewData["Title"] = "ListSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h4>Yetenek Listesi</h4>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Yetenek</th>
        <th>Değer</th>        
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SkillId</td>
            <td>@item.SkillName</td>
            <td>@item.SkillValue</td>
            <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Skill/AddSkill" class="btn btn-info">Yeni Yetenek Ekle</a>
