@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h4>Yetenek Güncelleme</h4>
<br />
<form class="form-group" method="post">
    <label>Id</label>
    <input type="text" class="form-control" asp-for="SkillId" style="border:1px solid black" readonly />
    <br />
    <label>Yetenek</label>
    <input type="text" class="form-control" asp-for="SkillName" style="border:1px solid black" />
    <br />
    <label>Değer</label>
    <input type="number" class="form-control" asp-for="SkillValue" style="border:1px solid black" />
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>

