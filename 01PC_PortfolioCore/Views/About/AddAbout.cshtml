@model About
@{
    ViewData["Title"] = "AddAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h4>Yeni Hakkımda Bölümü Ekleme</h4>
<br />
<form class="form-group" method="post">
    <label>Bölüm Açıklaması</label>
    <input type="text" class="form-control" asp-for="SectionDescription" style="border:1px solid black" />
    <br />
    <label>Pozisyon</label>
    <input type="text" class="form-control" asp-for="JobTitle" style="border:1px solid black" />
    <br />
    <label>Resim Url</label>
    <input type="text" class="form-control" asp-for="ImageUrl" style="border:1px solid black" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" style="border:1px solid black" />
    <br />
    <label>Doğum Yılı</label>
    <input type="text" class="form-control" asp-for="Birthday" style="border:1px solid black" />
    <br />
    <label>Github</label>
    <input type="text" class="form-control" asp-for="WebSite" style="border:1px solid black" />
    <br />
    <label>Telefon No</label>
    <input type="text" class="form-control" asp-for="Phone" style="border:1px solid black" />
    <br />
    <label>Şehir</label>
    <input type="text" class="form-control" asp-for="City" style="border:1px solid black" />
    <br />
    <label>Yaş</label>
    <input type="text" class="form-control" asp-for="Age" style="border:1px solid black" />
    <br />
    <label>Mezuniyet Derecesi</label>
    <input type="text" class="form-control" asp-for="Degree" style="border:1px solid black" />
    <br />
    <label>E-Mail</label>
    <input type="text" class="form-control" asp-for="Mail" style="border:1px solid black" />
    <br />
    <label>Freelance Çalışma</label>
    <input type="text" class="form-control" asp-for="Freelance" style="border:1px solid black" />
    <br />
    <label>Açıklama 2</label>
    <textarea class="form-control" asp-for="Description2" style="border:1px solid black; min-height: 120px;"></textarea>
    <br />
    <button class="btn btn-primary">Ekle</button>
</form>
