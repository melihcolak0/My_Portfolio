@model About
<!-- About Section -->
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>
        <p>@Model.SectionDescription</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="@Model.ImageUrl" class="img-fluid" alt="" style="border-radius: 15px;">
            </div>
            <div class="col-lg-8 content">
                <h2>@Model.JobTitle</h2>
                <p class="py-3">
                    @Model.Description2
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Doğum Yılı:</strong> <span>@Model.Birthday</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>GitHub:</strong> <span>@Model.WebSite</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Telefon No:</strong> <span>@Model.Phone</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@Model.City</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@Model.Age</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Mezuniyet Derecesi:</strong> <span>@Model.Degree</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>E-Mail:</strong> <span>@Model.Mail</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Freelance Çalışma:</strong> <span>@Model.Freelance</span></li>
                        </ul>
                    </div>
                </div>               
            </div>
        </div>
    </div>

</section><!-- /About Section -->